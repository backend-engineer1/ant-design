{
  "extends": ["eslint-config-airbnb"],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "jest": true,
    "es6": true
  },
  "ecmaFeatures": {
    "jsx": true,
    "experimentalObjectRestSpread": true
  },
  "plugins": [
    "markdown",
    "react",
    "babel"
  ],
  "rules": {
    "comma-dangle": 0,
    "func-names": 0,
    "prefer-const": 0,
    "prefer-template": 0,
    "arrow-body-style": 0,
    "react/sort-comp": 0,
    "react/no-multi-comp": 0,
    "react/prop-types": 0,
    "react/prefer-es6-class": 0,
    "react/jsx-closing-bracket-location": 0,
    "react/jsx-no-bind": 0,
    "no-param-reassign": 0,
    "max-len": 0,
    "object-shorthand": 0,
    "quote-props": 0
  }
}
